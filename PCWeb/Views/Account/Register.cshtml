@model PCWeb.Models.Account.UserRegistation
@{
    ViewData["Title"] = "Đăng ký";
}
<br/>
<h2 class="text-center">Tạo tài khoản</h2>
<br />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Register" method="post" asp-controller="Account" asp-area="">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="FirstName" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="FirstName" class="form-control" />
                </div>
                
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="LastName" class="form-control" />
                </div>
                    <span asp-validation-for="LastName" class="text-danger"> </span>
                </div>
            <div class="form-group row">
                <label asp-for="Email" class="control-label col-md-3"></label>
                <div class="col-md-9">
                    <input asp-for="Email" class="form-control" />
                </div>
                
                <span asp-validation-for="Email" class="text-danger"> </span>
            </div>
                <div class="form-group row">
                    <label asp-for="DayOfBirth" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="DayOfBirth" class="form-control" id="date" onchange="getDay()"/>
                    </div>
                    
                    <span asp-validation-for="DayOfBirth" class="text-danger"> </span>
                </div>
                <div class="form-group row">
                    <label asp-for="Gender" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <select name="name" class="form-control">
                            @foreach (var item in ViewBag.Selected)
                            {
                                <option value="@item">@item</option>
                            }
                        </select>
                    </div>
                    
                    <span asp-validation-for="Gender" class="text-danger"> </span>
                </div>
                <div class="form-group row">
                    <label asp-for="Address" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="Address" class="form-control" />
                    </div>
                    <span asp-validation-for="Address" class="text-danger"> </span>
                </div>
                <div class="form-group row">
                    <label asp-for="PhoneNumber" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <span asp-validation-for="PhoneNumber" class="text-danger"> </span>
                </div>
                <div class="form-group row">
                    <label asp-for="Password" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="Password" class="form-control" />
                    </div>
                    
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group row">
                    <label asp-for="ConfirmPassword" class="control-label col-md-3"></label>
                    <div class="col-md-9">
                        <input asp-for="ConfirmPassword" class="form-control" />
                    </div>
                    
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="form-group row justify-content-center">
                    <input type="submit" value="Tạo tài khoản" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>
<div class="row justify-content-md-center">
    <a asp-action="Login" asp-controller="Account" asp-area="" class="btn btn-info">Quay về đăng nhập</a>
</div>

<br />
<script>
    var day = document.getElementById('date');
    function getDay() {
        var date = new Date(day);
        var dd = date.getDate();
        var mm = date.getMonth() + 1; 
        var yyyy = date.getFullYear();
        var today = dd + '/' + mm + '/' + yyyy;
        document.getElementById('date').innerHTML = today;
    }

</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}




