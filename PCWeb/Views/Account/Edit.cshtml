@model PCWeb.Models.Account.UserEdit
@{
    ViewData["Title"] = "Chỉnh sửa";
}
<br />
<h1 class="text-center">Chỉnh sửa thông tin</h1>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit" asp-controller="Account" asp-area="" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="FirstName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="FirstName" class="form-control" />
                </div>
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="LastName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="LastName" class="form-control" />
                </div>

                <span asp-validation-for="LastName" class="text-danger"> </span>
            </div>
            <div class="form-group row">
                <label asp-for="Email" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Email" class="form-control" />
                </div>

                <span asp-validation-for="Email" class="text-danger"> </span>
            </div>
            <div class="form-group row">
                <label asp-for="DayOfBirth" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="DayOfBirth" class="form-control" />
                </div>

                <span asp-validation-for="DayOfBirth" class="text-danger"> </span>
            </div>
            <div class="form-group row">
                <label asp-for="Gender" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <select name="name" class="form-control">
                        @foreach (var item in ViewBag.Selected)
                        {
                            <option value="@item">@item</option>
                        }
                    </select>
                </div>

                <span asp-validation-for="Gender" class="text-danger"> </span>
            </div>
            <div class="form-group row">
                <label asp-for="PhoneNumber" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="PhoneNumber" class="form-control" />
                </div>

                <span asp-validation-for="PhoneNumber" class="text-danger"> </span>
            </div>
            <div class="form-group row">
                <label asp-for="Address" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Address" class="form-control" />
                </div>

                <span asp-validation-for="Address" class="text-danger"> </span>
            </div>
            <div class="form-group row justify-content-center">
                <input type="submit" value="Lưu" class="btn btn-primary" />
                    <a style="margin-left:20px" asp-action="Detail" asp-controller="Account" asp-area="" asp-route-id="@ViewBag.Id" class="btn btn-primary">Trở về trang chủ</a>
            </div>
            @if (ViewBag.Status == 1)
            {
                <p class="text-warning">Đã lưu thay đổi</p>
            }
        </form>
    </div>
</div>


