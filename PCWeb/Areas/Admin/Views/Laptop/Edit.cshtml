@model PCWeb.Models.Root.Laptop
@{
    ViewData["Title"] = "Chỉnh sửa thông số Laptop";
}
<h2 class="text-center">Chỉnh sửa thông số Laptop</h2>
<hr />
<div class="row">
    <div class="col-lg-10">
        <form asp-action="Edit" asp-controller="Laptop" method="post" enctype="multipart/form-data">
