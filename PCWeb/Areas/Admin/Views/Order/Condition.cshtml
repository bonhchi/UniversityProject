@model PCWeb.Models.Order
@{
    ViewData["Title"] = "Thay đổi trạng thái";
}
<h3 class="text-center">Thay đổi trạng thái</h3>
<br />
<div class="row">
    <div class="col-lg-12">
        <form asp-action="Condition" asp-controller="Order" asp-area="Admin" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="OrderCondition.OrderConditionName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="OrderConditionId" class="form-control"
                            asp-items="@ViewBag.Condition">
                    </select>
                </div>
            </div>
            <div class="form-group row col-sm-3">
                <input type="submit" value="Thay đổi" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


