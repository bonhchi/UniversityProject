@model PCWeb.Models.Source.Product
@{
    ViewData["Title"] = "Chỉnh sửa sản phẩm";
}
<h2 class="text-center">Chỉnh sửa sản phẩm</h2>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="Edit" asp-controller="Product" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <label asp-for="ProductCode" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductCode" class="form-control" />
                </div>
                <span asp-validation-for="ProductCode" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ProductSeries" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductSeries" class="form-control" />
                </div>
                <span asp-validation-for="ProductSeries" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ProductName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductName" class="form-control" />
                </div>
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label" asp-for="ProductImage"></label>
                <div class="col-sm-6">
                    <input class="form-control" type="file" name="photo">
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="ProductPrice" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductPrice" class="form-control" />
                </div>
                <span asp-validation-for="ProductPrice" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ProductWarranty" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductWarranty" class="form-control" />
                </div>
                <span asp-validation-for="ProductWarranty" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ProductQuantity" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductQuantity" class="form-control" />
                </div>
                <span asp-validation-for="ProductQuantity" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ProductDescription" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductDescription" class="form-control" />
                </div>
                <span asp-validation-for="ProductDescription" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="ProductPackage" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="ProductPackage" class="form-control" />
                </div>
                <span asp-validation-for="ProductPackage" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Category.CategoryName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="CategoryId" class="form-control"
                            asp-items="@ViewBag.SelectedCategory">
                    </select>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Brand.BrandName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <select asp-for="BrandId" class="form-control"
                            asp-items="@ViewBag.SelectedBrand">
                    </select>
                </div>
            </div>
            <div class="form-group row col-sm-3">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
<div class="col-sm-3 row ">
    <a asp-action="Index" class="btn btn-primary">Quay lại danh sách</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
