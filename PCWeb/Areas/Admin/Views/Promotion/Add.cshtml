@model PCWeb.Models.Promotion
@{
    ViewData["Title"] = "Thêm khuyến mãi";
}
<h4 class="text-center">Thêm khuyến mãi</h4>
<hr />
<div class="row">
    <div class="col-lg-10">
        <form asp-action="Add" asp-controller="Promotion" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="PromotionName" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="PromotionName" class="form-control" />
                </div>
                <span asp-validation-for="PromotionName" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="PromotionCode" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="PromotionCode" class="form-control" />
                </div>
                <span asp-validation-for="PromotionCode" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="PromotionDiscount" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="PromotionDiscount" class="form-control" />
                </div>
                <span asp-validation-for="PromotionDiscount" class="text-danger"></span>
            </div>
            <div class="form-group row col-sm-3">
                <input type="submit" value="Thêm" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-primary">Quay lại danh sách</a>
    </div>
</div>
