@model PCWeb.Models.Root.CPU
@{
    ViewData["Title"] = "Thêm CPU";
}
<h2 class="text-center">Thêm CPU</h2>
<hr />
<div class="col-lg-10">
    <form asp-action="Add" asp-controller="CPU" method="post">
        <div class="form-group row">
            <label asp-for="PCComponent.Product.ProductName" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <select asp-for="PCComponentId" class="form-control"
                        asp-items="@ViewBag.Selected">
                </select>
            </div>
        </div>
        <div class="form-group row">
            <label asp-for="CPUModel" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CPUModel" class="form-control" />
            </div>
            <span asp-validation-for="CPUModel" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CPUCode" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CPUCode" class="form-control" />
            </div>
            <span asp-validation-for="CPUCode" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CPUSocket" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CPUSocket" class="form-control" />
            </div>
            <span asp-validation-for="CPUSocket" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CPUSpeed" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CPUSpeed" class="form-control" />
            </div>
            <span asp-validation-for="CPUSpeed" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CPUTurbo" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CPUTurbo" class="form-control" />
            </div>
            <span asp-validation-for="CPUTurbo" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CPUCore" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CPUCore" class="form-control" />
            </div>
            <span asp-validation-for="CPUCore" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CPUThread" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CPUThread" class="form-control" />
            </div>
            <span asp-validation-for="CPUThread" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CPUProcess" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CPUProcess" class="form-control" />
            </div>
            <span asp-validation-for="CPUProcess" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CPUCache" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CPUCache" class="form-control" />
            </div>
            <span asp-validation-for="CPUCache" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="CPUPower" class="col-sm-3 col-form-label"></label>
            <div class="col-sm-6">
                <input asp-for="CPUPower" class="form-control" />
            </div>
            <span asp-validation-for="CPUPower" class="text-danger"></span>
        </div>
        <div class="form-group row col-sm-3">
            <input type="submit" value="Thêm" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Index" class="btn btn-primary">Quay lại danh sách</a>
    </div>
</div>